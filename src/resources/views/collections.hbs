                        {{#each pimg}}
                        {{#if filename}}
                        <img width="100%" src="/uploads/{{filename}}" alt="">
                        {{/if}}
                        {{/each}}
                    </div>
                    <div class="info-box">
                        <div class="items-title">
                            <a href="">{{pname}}</a>
