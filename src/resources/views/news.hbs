<style>
    .captions a {
        color: var(--xanh);

    }

    .captions a:hover {
        color: var(--do);
    }
</style>
<div class="container">
    <div class="row mb-5 mt-4">
        <div class="col-md-6 px-0 fadeRight">
            <div style="border: 2px solid black;" id="carouselExampleIndicators" class="carousel slide"
                data-ride="carousel">
                <ol class="carousel-indicators">
                    {{#if topnews1}}
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    {{/if}}
                    {{#if topnews2}}
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    {{/if}}
                    {{#if topnews3}}
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    {{/if}}
                </ol>
                <div class="carousel-inner">
                    {{#if topnews1}}
                    <div class="carousel-item active">
                        <img style="height: 350px;" class="d-block w-100 category-img" src="{{topnews1.image}}"
                            alt="First slide">
                        <div style="background-color: rgba(0, 0, 0, 0.45)" class="carousel-caption d-md-block">
                            <h5>{{topnews1.title}}</h5>
                            <span>{{topnews1.createdAt}}</span>
                        </div>
                    </div>
                    {{/if}}
                    {{#if topnews2}}
                    <div class="carousel-item">
                        <img style="height: 350px;" class="d-block w-100 category-img" src="{{topnews2.image}}"
                            alt="Second slide">
                        <div style="background-color: rgba(0, 0, 0, 0.45)" class="carousel-caption d-md-block">
                            <h5>{{topnews2.title}}</h5>
                            <span>{{topnews2.createdAt}}</span>
                        </div>
                    </div>
                    {{/if}}
                    {{#if topnews3}}
                    <div class="carousel-item">
                        <img style="height: 350px;" class="d-block w-100 category-img" src="{{topnews3.image}}"
                            alt="Second slide">
                        <div style="background-color: rgba(0, 0, 0, 0.45)" class="carousel-caption d-md-block">
                            <h5>{{topnews3.title}}</h5>
                            <span>{{topnews3.createdAt}}</span>
                        </div>
                    </div>
                    {{/if}}

                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>

        </div>
        <div class="col-md-6 fadeLeft">
            <div class="row news-box category-box">
                {{#if topnews1}}
                <div class="news-img-box col-md-4 px-3">
                    <a href="/news/{{topnews1.slug}}">
                        <img width="100%" src="{{topnews1.image}}" alt="">
                    </a>
                </div>
                <div class="news-content-box col-md-8 px-0">
                    {{!-- <span style="bottom: 0; left: 0; top: 75%" class="ico-product ico-new"> Mới</span> --}}

                    <a data-target="#carouselExampleIndicators" data-slide-to="0" class="active"
                        href="/news/{{topnews1.slug}}">
                    </a>
                        <a class="h5 d-block py-2" href="/news/{{topnews1.slug}}">{{topnews1.title}}</a>
                    <span><strong>{{topnews1.createdAt}}</strong></span>
                    <a style="bottom: 10px" href="/news/{{topnews1.slug}}" class="watch-detail">Xem thêm</a>
                </div>
                {{/if}}
                {{#if topnews2}}
                <div class="news-img-box col-md-4 px-3 mt-2">
                    <a href="/news/{{topnews2.slug}}">
                        <img width="100%" src="{{topnews2.image}}" alt="">
                    </a>
                </div>
                <div class="news-content-box col-md-8 px-0">
                    {{!-- <span style="bottom: 0; left: 0; top: 75%" class="ico-product ico-new"> Mới</span> --}}
                    <a data-target="#carouselExampleIndicators" data-slide-to="1" href="/news/{{topnews2.slug}}">

                        
                    </a>
                    <a class="h5 d-block py-3" href="/news/{{topnews2.slug}}">{{topnews2.title}}</a>
                    <span><strong>{{topnews2.createdAt}}</strong></span>
                    
                    <a style="bottom: 10px" href="/news/{{topnews2.slug}}" class="watch-detail">Xem thêm</a>
                </div>
                {{/if}}
                {{#if topnews3}}
                <div class="news-img-box col-md-4 px-3 mt-2">
                    <a href="/news/{{topnews3.slug}}">

                        <img width="100%" src="{{topnews3.image}}" alt="">
                    </a>
                </div>
                <div class="news-content-box col-md-8 px-0">
                    {{!-- <span style="bottom: 0; left: 0; top: 75%" class="ico-product ico-new"> Mới</span> --}}
                    <a data-target="#carouselExampleIndicators" data-slide-to="2" class="active"
                        href="/news/{{topnews3.slug}}">
                        
                    </a>
                    <a class="h5 d-block py-3" href="/news/{{topnews3.slug}}">{{topnews3.title}}</a>
                    <span><strong>{{topnews3.createdAt}}</strong></span>
                    <a style="bottom: 10px" href="/news/{{topnews3.slug}}" class="watch-detail">Xem thêm</a>
                </div>
                {{/if}}
            </div>

        </div>
    </div>


    <div class="classify-products fadeUp">

        <div class="row product-list data-metatip=" true"">
            <div class="row pagi">
                <span style="line-height: 46px;" class="sub-title">Tin tức Nam
                    Thịnh</span>
                <img class="bgc-title" src="/img/title.png" alt="">


            </div>
            {{#each NT}}
            <div class="col-md-6 px-0 mb-2">
                <div onclick='window.location.href="/news/{{slug}}"' class="card flex-row"><img
                        class="card-img-left example-card-img-responsive" style="width: 50%; height:185px"
                        src="{{image}}" />
                    <div style="background-color: white;" class="captions">
                        <a href="/news/{{slug}}">
                            <h5 class="card-title h5 h5-sm">{{title}}</h5>
                        </a>
                        <p class="card-text">{{subtitle}}</p>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>

    <div class="classify-products fadeUp">

        <div class="row product-list data-metatip=" true"">
            <div class="row pagi">
                <span style="line-height: 46px;" class="sub-title">Tin tức thị trường</span>
                <img class="bgc-title" src="/img/title.png" alt="">


            </div>
            {{#each TT}}
            <div class="col-md-6 px-0 mb-2">
                <div onclick='window.location.href="/news/{{slug}}"' class="card flex-row"><img
                        class="card-img-left example-card-img-responsive" style="width:50%; height:185px"
                        src="{{image}}" />
                    <div style="background-color: white;" class="captions">
                        <a href="/news/{{slug}}">
                            <h5 class="card-title h5 h5-sm">{{title}}</h5>
                        </a>
                        <p class="card-text">{{subtitle}}</p>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>