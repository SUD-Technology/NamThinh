<div class="row mb-5 mt-4">
    <div class="col-md-6 px-0">
        <div style="border: 2px solid black;" id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img style="max-height: 350px;" class="d-block w-100"
                        src="{{topnews1.image}}" alt="First slide">
                    <div style="background-color: rgba(0, 0, 0, 0.45)" class="carousel-caption d-none d-md-block">
                        <h5>{{topnews1.title}}</h5>
                        <span>{{topnews1.createdAt}}</span>
                    </div>

                </div>
                <div class="carousel-item">
                    <img style="max-height: 350px;" class="d-block w-100"
                        src="{{topnews2.image}}" alt="Second slide">
                    <div style="background-color: rgba(0, 0, 0, 0.45)" class="carousel-caption d-none d-md-block">
                        <h5>{{topnews2.title}}</h5>
                        <span>{{topnews2.createdAt}}</span>
                    </div>

                </div>

            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

    </div>
    <div class="col-md-6">
        <div class="row news-box">
            <div class="news-img-box col-md-4 px-3">
                <a href="">
                    <img width="100%" src="{{topnews1.image}}"
                        alt="">
                </a>
            </div>
            
            <div class="news-content-box col-md-8 px-0">
                                <span style="bottom: 0; left: 0; top: 75%" class="ico-product ico-new"> Mới</span>

                <a data-target="#carouselExampleIndicators" data-slide-to="0" class="active" href="">
                    <h5 class="py-2">{{topnews1.title}}</h5>
                </a>
                    <span>{{topnews1.createdAt}}</span>
                <a style="bottom: 10px" href="" class="watch-detail">Xem thêm</a>
            </div>

            <div class="news-img-box col-md-4 px-3 mt-2">
                <a href="">
                    <img width="100%" src="{{topnews2.image}}" alt="">
                </a>
            </div>
            <div class="news-content-box col-md-8 px-0">
                                <span style="bottom: 0; left: 0; top: 75%" class="ico-product ico-new"> Mới</span>

                <a data-target="#carouselExampleIndicators" data-slide-to="1" href="">
                    
                    <h5 class="py-2" >{{topnews2.title}}</h5>
                </a>
                <span>{{topnews2.createdAt}}</span>
            <a style="bottom: 10px" href="" class="watch-detail">Xem thêm</a>
            </div>


            <div class="news-img-box col-md-4 px-3 mt-2">
                <a href="">
                    
                    <img width="100%" src="{{topnews3.image}}"
                        alt="">
                </a>
            </div>
            <div class="news-content-box col-md-8 px-0">
                <span style="bottom: 0; left: 0; top: 75%" class="ico-product ico-new"> Mới</span>
                <a data-target="#carouselExampleIndicators" data-slide-to="0" class="active" href="">
                    <h5 class="py-2">{{topnews3.title}}</h5>
                </a>
                <span>{{topnews3.createdAt}}</span>
                <a style="bottom: 10px" href="" class="watch-detail">Xem thêm</a>
            </div>



        </div>

    </div>
</div>


