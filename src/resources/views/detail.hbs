<div class="product-page">
    <div class="mb-4"></div>
    <div class="row pagi">
        <span class="sub-title">Sản phẩm</span>
        <img class="bgc-title" src="/img/title.png" alt="">
    </div>

    <div class="title-details flexbetwen">
        <h2>{{data.pname}} <span class="h2" style="color: #ec3233">{{data.pid}}</span> </h2>
        <iframe
            src="https://www.facebook.com/plugins/like.php?href=https://tanphat.com/products/{{data.pslug}};width=172&amp;layout=button_count&amp;action=like&amp;size=small&amp;show_faces=true&amp;share=true&amp;height=46&amp;appId=663428044065589"
            width="172" height="20" style="border:none;overflow:hidden" scrolling="no" frameborder="0"
            allowtransparency="true" allow="encrypted-media"></iframe>
    </div>

    <div class="row product-detail-box p-3">
        <div class="col-md-5 px-2">
            <div class="demo">
                <div class="item">
                    <div class="clearfix" style="max-width:474px;">
                        <ul id="image-gallery" class="gallery list-unstyled cS-hidden">
                            {{#each data.pimg}}
                            <li id="zoom_{{@index}}"
                                data-image="https://storage.googleapis.com/namthinh-69ec0.appspot.com/{{this}}"
                                data-zoom-image="https://storage.googleapis.com/namthinh-69ec0.appspot.com/{{this}}"
                                data-thumb="https://storage.googleapis.com/namthinh-69ec0.appspot.com/{{this}}">
                                <img src="https://storage.googleapis.com/namthinh-69ec0.appspot.com/{{this}}" />
                            </li>
                            {{/each}}

                        </ul>
                    </div>
                </div>
            </div>
        </div>



        <div class="col-md-4 px-1">
            <div class="price-box text-center">
                <span class="pt">
                    Giá
                </span>

                <p>{{data.price}}</p>
            </div>

            <div class="detail">
                <table height="80" style="width: 100%">
                    <tbody>
                        <tr>
                            <td style="width: 100px;"><span>Model :</span></td>
                            <td style="width: 330px;"><span>{{data.model}} </span></td>
                        </tr>
                        <tr>
                            <td style="width: 52px;"><span>Mã hàng :</span></td>
                            <td style="width: 330px;"><span>{{data.pid}}</span></td>
                        </tr>
                        <tr>
                            <td style="width: 52px;"><span>Thương hiệu :</span></td>
                            <td style="width: 330px;"><span>{{data.branch}}</span>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <hr>
                {{!-- <p><span><a class="hoverred" href="/showroom/86">Xem thêm các sản phẩm khác cùng nhà cung cấp
                            &gt;&gt;&gt;</a></span></p> --}}
                <hr>

                <table height="80" style="width: 100%;">
                    <tbody>
                        <tr>
                            <td style="width: 214px;" colspan="2">
                                <h5 class="title">Thông tin người đại diện</h5>
                            </td>
                        </tr>
                        <tr>
                            <td style="width: 100px;"><span>Họ tên :</span></td>
                            <td style="width: 330px;"><span>{{data.represent}}</span></td>
                        </tr>
                        <tr>
                            <td style="width: 52px;"><span>Hotline :</span></td>
                            <td style="width: 330px;"><span><a href="tel:{{data.phone}}"> {{data.phone}}</a></span>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>


        </div>

        <div class="col-md-3 px-2 sidelk">
            <div class="sp-sidebar">
                <div class="sidetitle">
                    <h3>Sản phẩm tương tự</h3>
                </div>
            </div>

            <div class="lksp">
                {{#each similar}}
                <li class="flexbetwen">
                    <div class="lksp-img">

                        <a href="{{slug}}">
                            {{#each product_img}}
                            <img class="smooth"
                                src="https://storage.googleapis.com/namthinh-69ec0.appspot.com/{{this}}">
                            {{/each}}
                        </a>

                    </div>
                    <div style="font-size: 14px" class="lksp-ex">
                        <div class="ex-title">
                            <a href="{{slug}}">{{product_name}}</a>
                        </div>
                        <div class="ex-code">
                            <p>{{product_id}}</p>
                        </div>
                        <!-- price -->
                        <div class="ex-price text-center">
                            <div><span>{{price}}</span></div>
                        </div>
                        <!--/. end price  -->
                    </div>
                </li>
                {{/each}}

            </div>
        </div>
    </div>

    <div class="heading">
        <h2 class="p-2">THÔNG TIN SẢN PHẨM</h2>
    </div>

    <div class="product-desc flexbetwen">
        <div class="infoproduct">
            {{{data.description}}}
        </div>
    </div>

    <div class="heading heading-comment">
        <h2 class="p-2">BÌNH LUẬN VỀ SẢN PHẨM</h2>
    </div>
    <div class="product-desc flexbetwen">

        {{!-- Comment start --}}
        <div class="row">
            <div class="col-12">
                <div class="">
                    <div class="fb-comments" data-href="https://tanphat.com/products/{{data.pslug}}" data-width=""
                        data-numposts="5"></div>
                </div>
            </div>
        </div>

        <div class="col-md-4 ml-auto">
            <div class="ctrl-box md-content ">
                <h5 class="title uppercase text-center">Liên hệ <span style="color: var(--cam);"> nhà cung
                        cấp</span>
                </h5>
                <form method="POST" action="/form/contact" class="form-validate" data-callback="reload_page"
                    novalidate="novalidate">
                    <input type="hidden" name="showroom_email" value="sale@trungtamvoxe.com">
                    <div class="form-group border-0 py-0">
                        <input type="fullname" class="form-control" id="fullname" name="fullname"
                            placeholder="Họ Tên (*)" required="" aria-required="true">
                    </div>
                    <div class="form-group border-0 py-0">
                        <input type="email" class="form-control" id="email" name="email"
                            placeholder="Email (Không bắt buộc)">
                    </div>
                    <div class="form-group border-0 py-0">
                        <input type="phone" class="form-control" id="phone" name="phone" placeholder="Số Điện Thoại (*)"
                            required="" aria-required="true">
                    </div>
                    <div class="form-group border-0 py-0">
                        <textarea class="form-control small-size" rows="4" name="content"
                            readonly="">Xin chào, tôi vừa xem BRIDGESTONE TURANZA GR100 225/45R18 MÃ 225/45R18 trên hanaco.vn , hãy liên hệ tôi để tư vấn thêm.  Xin cảm ơn!</textarea>
                    </div>

                    <div class="form-group text-center border-0">
                        <button type="submit" class="mx-auto d-block btn btn-primary btn-inline-product">Gửi yêu
                            cầu</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    {{!-- Comment end --}}

</div>

</div>
<script>
    $(`#zoom_0`).ezPlus({
        zoomWindowFadeIn: 500,
        zoomWindowFadeOut: 500,
        lensFadeIn: 500,
        lensFadeOut: 500
    });
</script>