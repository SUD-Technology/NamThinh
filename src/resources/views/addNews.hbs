{{!-- Body: start --}}
<div class="container">
    <div class="addProduct-header">

        <div class="row">
            <div class="col-md-4 ml-auto">
                {{#if success}}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    {{success}}
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                {{/if}}
                {{#if error}}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    {{error}}
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                {{/if}}
            </div>
        </div>
    </div>

    <div class="addProduct-body">
        <form class="form-horizontal" enctype="multipart/form-data" method="post">
            <fieldset>
                <div class="form-group">
                    <label class="col-md-2 control-label" for="news-title">Tiêu đề</label>
                    <div class="col-md-10">
                        <input onchange="myFunction()" id="news-title" name="title" placeholder="Tiêu đề"
                            class="form-control input-md" required="" type="text">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label" for="news-subtitle">Trích dẫn</label>
                    <div class="col-md-10">
                        <input id="news-subtitle" name="subtitle" placeholder="Trích dẫn" class="form-control input-md"
                            required="" type="text">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label" for="product_categories">DANH MỤC TIN TỨC</label>
                    <div class="col-md-10">
                        <select id="product_categories" name="news_categories" required="" class="form-control">
                            <option value="">--Chọn loại tin tức--</option>
                            <option value="NT">Tin tức Nam Thịnh</option>
                            <option value="TT">Tin tức thị trường</option>

                        </select>
                    </div>
                </div>
                <!-- Image -->
                <div class="form-group">
                    <label class="col-md-2 control-label" for="product-image">ẢNH BÌA BÀI VIẾT</label>
                    <div class="col-md-10">
                        <div class="form-group-container">
                            <input id="product-image" accept="image/*" required="" name="news-image"
                                class="form-control input-md"
                                onchange="preview('product-image','images-upload', 'num-of-file')" type="file">
                            <label for="product-image">
                                <i class="fas fa-upload"></i>
                                Chọn ảnh bìa bài viết &nbsp;
                            </label>
                            <p class="num-of-file" id="num-of-file">Chưa có ảnh nào được chọn</p>
                            <div class="images-upload" id="images-upload">

                            </div>
                        </div>

                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-12">
                        <textarea id="content" name="content"></textarea>
                    </div>
                </div>

                <!-- Text input-->
                <div class="form-footer">
                    <button type="submit">Đăng tin</button>
                </div>
            </fieldset>
        </form>
    </div>

</div>

{{!-- Body: end --}}

<script src="/ckeditor/ckeditor.js"></script>

<!-- Footer -->
<script>

    function preview(productImage, imageUpload, numOfFile) {
        let fileInput = document.getElementById(productImage)
        let imageContainer = document.getElementById(imageUpload)
        let numOfFiles = document.getElementById(numOfFile)
        imageContainer.innerHTML = ""
        numOfFiles.textContent = `${fileInput.files.length} ảnh đã được chọn`;

        for (i of fileInput.files) {
            let reader = new FileReader()
            let figure = document.createElement("figure")
            let figCap = document.createElement("figcaption")

            figCap.innerText = i.name
            figure.appendChild(figCap)
            reader.onload = () => {
                let img = document.createElement("img");
                img.setAttribute("src", reader.result);
                figure.insertBefore(img, figCap);
            }
            imageContainer.appendChild(figure);
            reader.readAsDataURL(i)
        }
    }
    CKEDITOR.replace('content', {
        extraPlugins: 'filebrowser',
        filebrowserBrowseUrl: '/uploads',//upload location
        filebrowserUploadMethod: 'form',
        filebrowserUploadUrl: '/news/upload'//route
    })

</script>