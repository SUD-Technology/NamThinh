                                <option value="">Lốp máy công trình: Lốp máy súc</option>
                                <option value="">Lốp máy công trình: Lốp xe cẩu</option>
                                <option value="">Lốp máy công trình: Lốp xe lu</option>
                                <option value="">Lốp máy công nghiệp: Lốp đặc</option>
                                <option value="">Lốp máy công nghiệp: Lốp công nghiệp khí nén</option>
                                <option value="">Lốp máy nông nghiệp: Lốp nông nghiệp nhỏ</option>
                                <option value="">Lốp máy nông nghiệp: Lốp nông nghiệp lớn</option>
                            </optgroup>
                            <optgroup label="Xe tải / Đầu kéo / Xe ben">
                                <option value="">Xe tải thùng</option>
                                <option value="">Xe đầu kéo</option>
                                <option value="">Xe ben</option>
                                <option value="">Sơ mi rơ móc</option>
                            </optgroup>
                            <optgroup label="Phụ tùng ô tô">
                                <option value="">Xe tải thùng</option>
