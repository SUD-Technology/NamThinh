<div class="container">
    <div class="addProduct-header">
        <div class="row pagi">
            <span class="sub-title">Thêm sản phẩm</span>
        </div>
    </div>
    <div class="addProduct-body">
        <form class="form-horizontal" enctype="multipart/form-data" method="post">
            <fieldset>
