                </div>

                <!-- Text input-->
                <div class="form-group">
                    <label class="col-md-4 control-label" for="product_branch">THƯƠNG HIỆU</label>
                    <div class="col-md-8">
                        <input id="product_branch" name="product_branch" placeholder="Thương hiệu"
                            class="form-control input-md" required="" type="text">
                    </div>
                </div>

                <!-- Text input-->
                <div class="form-group">
                    <label class="col-md-4 control-label" for="product_origin">Xuất sứ</label>
                    <div class="col-md-8">
                        <input id="product_origin" name="product_origin" placeholder="Xuất sứ"
                            class="form-control input-md" required="" type="text">
                    </div>
                </div>

                <!-- Text input-->
                <div class="form-group">
                    <label class="col-md-4 control-label" for="product-image">HÌNH ẢNH SẢN PHẨM</label>
                    <div class="col-md-8">
                        <div class="form-group-container">
                            <input id="product-image" accept="image/*" required="" name="product-image"
                                class="form-control input-md" onchange="preview()" type="file" multiple>
                            <label for="product-image">
                                <i class="fas fa-upload"></i>
                                Chọn ảnh sản phẩm &nbsp;
                            </label>
                            <p id="num-of-file">Chưa có ảnh nào được chọn</p>
                            <div id="images-upload">

                            </div>
                        </div>

                    </div>
                </div>
                <!-- Textarea -->
                <div class="form-group">
                    <label class="col-md-4 control-label" for="product_description">MÔ TẢ THÔNG TIN SẢN PHẨM</label>
                    <div class="col-md-8">
                        <textarea class="form-control" id="product_description" name="product_description"></textarea>
                    </div>
                </div>

                <!-- Text input-->
                <div class="form-footer">
                    <button type="submit">Thêm sản phẩm</button>
                </div>

            </fieldset>
        </form>
    </div>

    <div class="addProduct-footer">

    </div>
</div>

