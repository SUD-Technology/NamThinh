                                <option value="">Sơ mi rơ móc</option>
                            </optgroup>
                            <optgroup label="Dầu nhớt">
                                <option value="">Dầu nhớt ô tô / xe máy: Dầu động cơ</option>
                                <option value="">Dầu nhớt ô tô / xe máy: Dầu hộp số</option>
                                <option value="">Dầu nhớt ô tô / xe máy: Dầu láp</option>
                                <option value="">Dầu nhớt công nghiêp: Dầu đa năng</option>
                                <option value="">Dầu nhớt công nghiêp: Dầu bôi trơn</option>
                                <option value="">Dầu nhớt công nghiêp: Dầu thủy lực</option>
                            </optgroup>
