<div id="wrapper" class="mb-5">
    <form action="" id="form-login">
        <h1 class="form-heading text-uppercase">Đăng Ký</h1>
        <div class="form-group">
            <i class="fas fa-user"></i>
            <input type="text" class="form-input" placeholder="Tên Showroom">
        </div>
        <div class="form-group">
            <i class="fas fa-envelope"></i>
            <input type="email" class="form-input" placeholder="Email">
        </div>
        <div class="form-group">
            <i class="fas fa-key"></i>
            <input type="password" class="form-input" placeholder="Mật khẩu">
            <div id="eye">
                <i class="far fa-eye"></i>
            </div>
        </div>
        <div class="form-group">
            <i class="fas fa-key"></i>
            <input type="password" class="form-input" placeholder="Xác nhận mật khẩu">
            <div id="eye2">
                <i class="far fa-eye"></i>
            </div>
        </div>
        <div class="form-group">
            <i class="fas fa-phone"></i>
            <input type="text" class="form-input" placeholder="Số điện thoại">
        </div>
        <div class="form-group">
            <i class="fas fa-id-card"></i>
            <input type="text" class="form-input" placeholder="Chứng minh nhân dân hoặc mã số thuế">
        </div>
        <div class="form-group">
            <i class="fas fa-map-marked"></i>
            <input type="text" class="form-input" placeholder="Linh Google Map (Không bắt buộc)">
        </div>
        <div class="form-group">
            <i class="fas fa-map-marker-alt"></i>
            <input type="text" class="form-input" placeholder="Địa chỉ">
        </div>
        <div class="form-group">
            <i class="fas fa-city"></i>
            <select class="form-input" name="calc_shipping_provinces" required="">
                <option value="">Tỉnh/Thành</option>
            </select>
        </div>
        <div class="form-group">
            <i class="fas fa-building"></i>
            <select class="form-input" name="calc_shipping_district" required="">
                <option value="">Quận/Huyện</option>
            </select>
        </div>
        <input class="billing_address_1" name="" type="hidden" value="">
        <input class="billing_address_2" name="" type="hidden" value="">
        <div class="form-group">
            <i class="fas fa-user-tie"></i>
            <input type="text" class="form-input" placeholder="Người đại diện">
        </div>
        <div class="form-group">
            <i class="fas fa-mobile"></i>
            <input type="text" class="form-input" placeholder="Số điện thoại">
        </div>
        <div class="col-6 mx-auto">

            <input type="submit" value="Đăng ký" class="form-submit">
        </div>
    </form>
</div>