<div class="container py-5">
    <div class="row">
        <div class="col-12">
            <div class="heading heading-comment">
                <h2>LIÊN HỆ</h2>
            </div>
        </div>
        <div class="col-md-12">
        </div>
        <div class="col-md-8">
            <!-- block  contact-->
            <div class="block-contact-us">
                <form action="https://hanaco.vn/contact" method="post" class="form-validate" novalidate="novalidate">
                    <div class="block-content row">
                        <div class="col-sm-5">
                            <div class="form-group border-0 py-0">
                                <input type="text" placeholder="Tiêu đề" name="subject" id="subject"
                                    class="form-control">
                            </div>
                            <div class="form-group border-0 py-0">
                                <input type="text" placeholder="Tên của bạn *" name="name" class="form-control"
                                    id="name" required="required" aria-required="true">
                                <div class="help-block with-errors"></div>
                            </div>
                            <div class="form-group border-0 py-0">
                                <input type="text" placeholder="E-Mail của bạn *" name="email" class="form-control"
                                    id="email" required="required" aria-required="true">
                                <div class="help-block with-errors"></div>
                            </div>
                            <div class="form-group border-0 py-0">
                                <input type="text" placeholder="Số điện thoại" name="phone" id="phone"
                                    class="form-control">
                            </div>
                        </div>
                        <div class="col-sm-7">
                            <div class="form-group border-0 py-0">
                                <textarea placeholder="Nội dung *" name="message" rows="4" class="form-control"
                                    id="message" required="required" aria-required="true"></textarea>
                                <div class="help-block with-errors"></div>
                            </div>

                            <div class="text-left">
                                <button class="btn btn-success" type="submit">Gửi cho chúng tôi</button>
                            </div>
                        </div>
                    </div><!-- block  contact-->
                </form>
            </div>
        </div>

        <div class="col-md-4">

            <!-- block  contact-->
