<div class="mb-5" id="wrapper">
    <form action="/users/login" id="form-login" method="POST">
        <h1 class="form-heading text-uppercase">Đăng nhập</h1>
        <div class="form-group">
            <i class="far fa-user"></i>
            <input name="username" type="text" class="form-input" placeholder="Tên đăng nhập">
        </div>
        <div class="form-group">
            <i class="fas fa-key"></i>
            <input name="password" type="password" class="form-input" placeholder="Mật khẩu">
            <div id="eye">
                <i class="far fa-eye"></i>
            </div>
        </div>
        <div class="col-6 mx-auto">

            <input type="submit" value="Đăng nhập" class="form-submit">
        </div>
    </form>
</div>