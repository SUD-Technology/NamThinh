<script>
    let count = JSON.parse(localStorage.getItem('shopping-cart')).length;
    
    $(document).ready(function() {
        $(window).on('load', function() {
                if($(window).width() > 600) {
                    setTimeout(function() {
                    $('#TuVanModal').modal('show');
                }, 180000)
            }
        });

        if(localStorage.getItem('shopping-cart') != null) {
            $('#count-cart').text(count);
        }

        $('.items-price').click(function() {
            
            if(!$(this).hasClass('added')) {
                count++;
                $('#count-cart').text(count);
                
            }
            $(this).addClass('added');
        })
        
        
    })
</script>

