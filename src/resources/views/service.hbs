<div class="service-page">
    <div style="width: 50%;" class="container titleL mt-5">
        
        <h1 style="font-weight: 700;" >Dịch Vụ</h1>
    </div>

    <div class="row mt-5">
        {{#if services}}
        {{#each services}}
        
        <div onclick="window.location.href='/discount/{{slug}}'" class="service-box col-md-6 mb-5">
            <div style="width: 100%;" class="service-main-img">
                <img height="300px" class="w-100 smooth" src="{{image}}" alt="">
            </div>
            <div style="height: 120px;" class="service-main-content">
                <span class="py-3 px-3 h5 d-block">{{title}} <br>
                <p class="py-3">{{subtitle}}</p></span>       
            </div>
            
        </div>
        {{/each}}


        {{else}}
        <div class="container text-center h2">Đang cập nhật</div>
        {{/if}}

    </div>
</div>

